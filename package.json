{
  "name": "@9renpoto/bot",
  "private": true,
  "repository": "ssh://git@github.com:9renpoto/bot.git",
  "author": "github.com/9renpoto",
  "engines": {
    "npm": "^10.0.0"
  },
  "scripts": {
    "build": "lerna run build --include-dependents",
    "bump": "lerna version --no-git-tag-version --no-push",
    "clean": "lerna run clean --parallel && lerna clean",
    "lint": "run-s -l lint:*",
    "lint:eslint": "eslint . --ext=ts,tsx",
    "lint:prettier": "prettier --check './{packages,example}/**/*.{js,jsx,ts,tsx}'",
    "test": "jest"
  },
  "devDependencies": {
    "@9renpoto/eslint-config-typescript": "7.7.3",
    "@9renpoto/tsconfig": "7.7.2",
    "@swc/core": "1.3.99",
    "@swc/jest": "0.2.29",
    "@types/faker": "5.5.9",
    "@types/jest": "29.5.10",
    "eslint": "8.54.0",
    "faker": "5.5.3",
    "husky": "8.0.3",
    "jest": "29.7.0",
    "lerna": "6.6.2",
    "lint-staged": "15.1.0",
    "npm-run-all": "4.1.5",
    "prettier": "2.8.8",
    "prettier-plugin-organize-imports": "3.2.4",
    "prettier-plugin-package": "1.3.1",
    "regenerator-runtime": "0.14.0",
    "rimraf": "5.0.5"
  },
  "jest": {
    "transform": {
      "^.+\\.(t|j)s$": "@swc/jest"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --cache"
    ],
    "*.{js,jsx,json,md}": [
      "prettier --write"
    ]
  },
  "workspaces": [
    "packages/*",
    "examples/*"
  ]
}
